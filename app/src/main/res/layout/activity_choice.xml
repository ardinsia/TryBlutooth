<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ardin.tryblutooth.Choice">

    <Button
        android:id="@+id/justtry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Just Try"
        android:layout_marginTop="16dp"

        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        />
    <Button
        android:id="@+id/ecgreader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ECG Reader"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/justtry"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        />
    <Button
        android:id="@+id/ecgviewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ECG Viewer"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ecgreader"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        />

</android.support.constraint.ConstraintLayout>
